<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!-- Define pressed state background -->
            <solid android:color="#FFAAAAAA" /> <!-- Adjust the glow color as needed -->
            <stroke
                android:width="2dp"
                android:color="#FFFF00" /> <!-- Adjust the border color as needed -->
            <corners android:radius="8dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <!-- Define default state background -->
        <!--<drawable android:drawable="@drawable/square_button_background" />  Reference button_background.xml -->
        <solid android:color="#FFAAAAAA" />
    </item>
</selector>