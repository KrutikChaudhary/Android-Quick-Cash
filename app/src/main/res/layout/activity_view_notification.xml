<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notification_jobTitle_textview"
        android:layout_width="211dp"
        android:layout_height="24dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="43dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/notification_salary_textview"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/notification_title_textview"
        android:layout_width="260dp"
        android:layout_height="34dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="76dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/notification_jobTitle_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/notification_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="306dp"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_location_textview" />

    <TextView
        android:id="@+id/notification_salary_textview"
        android:layout_width="211dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toTopOf="@+id/notification_location_textview"
        app:layout_constraintStart_toEndOf="@+id/notification_textView2" />

    <TextView
        android:id="@+id/notification_location_textview"
        android:layout_width="211dp"
        android:layout_height="24dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="59dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_salary_textview" />

    <TextView
        android:id="@+id/notification_textView1"
        android:layout_width="72dp"
        android:layout_height="25dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="42dp"
        android:text="Title:"
        app:layout_constraintBottom_toTopOf="@+id/notification_textView2"
        app:layout_constraintEnd_toStartOf="@+id/notification_jobTitle_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_title_textview" />

    <TextView
        android:id="@+id/notification_textView2"
        android:layout_width="72dp"
        android:layout_height="25dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="24dp"
        android:text="Salary:"
        app:layout_constraintEnd_toStartOf="@+id/notification_salary_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_textView1" />

    <TextView
        android:id="@+id/notification_textView3"
        android:layout_width="72dp"
        android:layout_height="25dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="447dp"
        android:text="Location:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/notification_location_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>