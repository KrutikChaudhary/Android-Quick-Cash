<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/jobParametersText"
        android:layout_width="351dp"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="74dp"
        android:ems="10"
        android:hint="Search here..."
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/salarySpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/salarySpinner"
        android:layout_width="351dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobParametersText" />

    <Spinner
        android:id="@+id/durationSpinner"
        android:layout_width="351dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="74dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salarySpinner" />

    <Spinner
        android:id="@+id/locationSpinner"
        android:layout_width="351dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/durationSpinner" />

    <Button
        android:id="@+id/jobSearchButton"
        android:layout_width="134dp"
        android:layout_height="76dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="221dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationSpinner" />
</androidx.constraintlayout.widget.ConstraintLayout>